FROM odoo:18.0

# Cambia a root para poder instalar paquetes del sistema
USER root

# Instala Git y las dependencias necesarias globalmente en el sistema
RUN apt-get update && \
    apt-get install -y git && \
    rm -rf /var/lib/apt/lists/*

# Instala las librer√≠as de Python necesarias globalmente, omitiendo el entorno virtual
RUN pip3 install --no-cache-dir --break-system-packages firebase-admin dropbox pydub SpeechRecognition

# Cambia de nuevo al usuario odoo
USER odoo

